<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/gameContainer"
              xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:paddingTop="@dimen/activity_vertical_margin"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              tools:context=".puzzle.ui.GameActivity"
              tools:showIn="@layout/activity_game">


    <ImageView
        android:id="@+id/dish"
        android:layout_width="320dp"
        android:layout_height="325dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/dish_background"
        android:paddingBottom="20dp"
        android:paddingEnd="15dp"
        android:paddingStart="15dp"
        android:paddingTop="20dp"/>


    <ViewStub
        android:id="@+id/success_stub"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/game_success"/>


    <HorizontalScrollView
        android:id="@+id/viewContainer"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:id="@+id/layViewContainer"
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:layout_marginBottom="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">
        </LinearLayout>
    </HorizontalScrollView>
</LinearLayout>
